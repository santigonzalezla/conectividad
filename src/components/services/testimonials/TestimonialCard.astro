---
interface Props {
    name: string;
    title: string;
    description: string;
    image: string;
    icon: string;
}

const { name, title, description, image, icon } = Astro.props;
---

<div class="card">
    <div class="card-image">
        <img src={image} alt={name} />
    </div>
    <div class="card-info">
        <div class="card-info-top">
            <h3>{name}</h3>
            <h5>{title}</h5>
        </div>
        <p>{description}</p>
    </div>
    <div class="card-icon">
        {icon}
    </div>
</div>

<style>
    .card
    {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 30px;
        border-radius: 20px;
        box-shadow: 0 0 1rem rgba(0, 0, 0, 0.1);
        background-color: white;
        transition: transform 0.2s;
        gap: 25px;
        position: relative;
    }

    .card:hover
    {
        transform: translateY(-0.25rem);
    }

    .card-image
    {
        flex-basis: 30%;
        width: 100%;
        height: 100%;
        background: #0E1621;
        border-radius: 20px;
        display: flex;
    }

    .card-image img
    {
        width: 100%;
        height: 100%;
        border-radius: 20px;
        object-fit: cover;
    }

    .card-info
    {
        flex-basis: 70%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        gap: 15px;
        text-align: left;
    }

    .card-info h3
    {
        font-size: 1.5rem;
        font-weight: 600;
    }

    .card-info h5
    {
        margin: 0;
        font-weight: 400;
        color: #666;
    }

    .card-info p
    {
        font-size: 1rem;
        font-weight: 400;
        color: #666;
    }

    .card-icon
    {
        position: absolute;
        top: 30px;
        right: 30px;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 3rem;
        height: 3rem;
        border-radius: 50%;
        background-color: #f0f0f0;
    }

    .card-icon svg
    {
        width: 1.5rem;
        height: 1.5rem;
        fill: #666;
    }
</style>