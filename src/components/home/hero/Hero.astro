<style>
    .hero
    {
        position: relative;
        height: 100%;
        border-radius: 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        gap: 20px;
        padding: 80px 120px;
        background: rgba(0, 0, 0, 0.5);
        color: #FFF;
        overflow: hidden; /* Para asegurarse de que el contenido no se desborde */
        text-align: center;
    }

    .hero::before
    {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url("https://i.imgur.com/yfIBb7m.jpeg");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        opacity: 1;
        z-index: -1;
        border-radius: 30px;
    }

    .hero-buttons
    {
        display: flex;
        gap: 20px;
    }

    .hero-logos
    {
        display: flex;
        justify-content: space-between;
        width: 80%;
    }

    h3
    {
        font-size: 24px;
        font-weight: 500;
    }

    h1
    {
        font-size: 80px;
        font-weight: 600;
        padding: 0;
        margin: 0;
    }

    p
    {
        width: 80%;
        font-size: 20px;
        font-weight: 400;
        color: #FFF;
    }

    br
    {
        width: 400px;
        color: #FFF;
    }

    @media screen and (max-width: 767px)
    {
        .hero
        {
            width: 100%;
            padding: 30px;
        }

        h1
        {
            width: 100%;
            font-size: 40px;
        }

        p
        {
            width: 100%;
            font-size: 16px;
        }
    }

    @media screen and (min-width: 768px) and (max-width: 1024px)
    {
        .hero
        {
            width: 100%;
            padding: 30px 65px;
        }

        h1
        {
            width: 50%;
            font-size: 40px;
        }

        p
        {
            width: 50%;
            font-size: 16px;
        }
    }
</style>